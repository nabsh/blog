}

/* Ajuste le texte pour éviter les débordements */
.text-content {
  flex: 1;
  text-align: left;
  padding-right: 20px;
  min-width: 200px;
  max-width: 70%;
  word-wrap: break-word; /* Permet au texte de passer à la ligne */
  overflow: hidden; /* Masque tout contenu débordant */
}


